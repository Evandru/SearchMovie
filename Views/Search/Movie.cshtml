@model MovieModel.Movie

@{
    ViewData["Title"] = "Movie - " + Model.Title;
}

<div class="desktop container-fluid row align-items-center justify-content-center">
    <div class="col justify-content-end align-items-center">
        <img src="@Model.Poster" class="img-fluid shadow-lg border border-2 border-danger" alt="@Model.Title">
    </div>
    <div class="col border-dark border-start p-sm-3 align-items-center justify-content-center">
        <h2 class="text-lg-start">@Model.Title</h2>
        <h5 class="text-md-start">Released in @Model.Year</h5>
        <p class="text-decoration-underline">@Model.Genre</p>
        <p class="text-md-start">Writen by @Model.Writer</p>
        <span class="text-md-start"><strong>Starring</strong>: @Model.Actors</span>
        <p class="text-md-start m-sm-2 border-top border-bottom p-2">@Model.Plot</p>
    </div>
</div>
<div class="mobile container-fluid row row-cols-1 text-center">
    <div class="col p-sm-3 bg-light border-start border-end border-body">
        <h2 class="text-lg-start">@Model.Title</h2>
        <h5 class="text-md-start">Released in @Model.Year</h5>
        <p class="text-decoration-underline">@Model.Genre</p>
        <p class="text-md-start">Writen by @Model.Writer</p>
        <span class="text-md-start"><strong>Starring</strong>: @Model.Actors</span>
        <p class="text-md-start m-sm-2 border-top border-bottom p-2">@Model.Plot</p>
        <div class="col justify-content-end align-items-center">
            <img src="@Model.Poster" class="img-fluid shadow-lg border border-2 border-danger" alt="@Model.Title">
        </div>
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="row text-center my-5 bg-dark border-bottom border-top border-3 border-danger w-50" style="border-radius:20px;">
        <h3 class="display-6 text-danger p-2 border-bottom border-danger">Ratings</h3>
        <div class="row text-center my-2">
            @foreach (var x in Model.Ratings)
            {
                <span class="text-white p-2">@x.Source: @x.Value</span>
            }
        </div>
    </div>
</div>
