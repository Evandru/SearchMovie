@model string

@{
    ViewData["Title"] = "Error";
}

<div class="container-fluid text-center">
    <h1 class="display-6 my-5 border-bottom">Too much results containing '@Model'.</h1>
    <p>
        The OMDb API returner too much results containing '@Model'.
        For better functioning and optimization of the search return, be more specific.
    </p>
</div>
<div class="container text-center p-3 w-50 border-bottom border-4 border-danger bg-dark text-white" style="border-radius:10px">
    <h1 class="display-1 p-1" style="font-size:x-large">Try searching again</h1>
    <form asp-controller="Search" asp-action="Index" class="d-flex justify-content-center align-items-center">
        <input type="text" placeholder="Movie Title" name="search" />
        <input type="submit" class="btn btn-outline-light mx-2" value="Search" />
    </form>
</div>